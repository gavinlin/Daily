<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.gavincode.bujo.presentation.ui.widget.WeekCalendar
        android:id="@+id/week_calendar_view"
        android:layout_height="@dimen/week_calendar_default_height"
        android:layout_width="match_parent"
        android:background="@drawable/calendar_background"
        app:calendarColor="@android:color/white"
        app:calendarCurrentDayTextColor="@color/calendar_text_current_day"
        app:calendarDayTextColor="@color/colorPrimary"
        app:calendarPastDayTextColor="@android:color/darker_gray"
        app:elevation="5dp"
        android:translationZ="5dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/daily_bullet_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/week_calendar_view"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:translationZ="20dp"
        >
        <ImageView
            android:id="@+id/daily_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:id="@+id/daily_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list"
            android:layout_toLeftOf="@id/daily_camera_button"
            />
        <TextView
            android:id="@+id/daily_bullet_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="Write a bullet..."
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:paddingStart="20dp"
            />
    </RelativeLayout>
</RelativeLayout>