<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/daily_plan_root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".presentation.ui.main.MainActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <com.gavincode.bujo.presentation.ui.widget.WeekCalendar
            android:id="@+id/week_calendar_view"
            android:layout_height="@dimen/week_calendar_default_height"
            android:layout_width="match_parent"
            android:background="@drawable/calendar_background"
            app:calendarColor="@android:color/white"
            app:calendarCurrentDayTextColor="@color/calendar_text_current_day"
            app:calendarDayTextColor="@color/colorPrimary"
            app:calendarPastDayTextColor="@android:color/darker_gray"
            app:elevation="5dp"
            android:translationZ="5dp"
            />

        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipe_refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/week_calendar_view"
            android:layout_above="@id/daily_bottom_layout"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/daily_list_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/daily_plan_list_date_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="empty"
                    />
            </FrameLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
        <RelativeLayout
            android:id="@+id/daily_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:translationZ="20dp"
            >
            <ImageView
                android:id="@+id/daily_camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                />
            <ImageView
                android:id="@+id/daily_list_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_list"
                android:layout_toLeftOf="@id/daily_camera_button"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/daily_bullet_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="@string/add_note"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:paddingStart="20dp"
                />
        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

