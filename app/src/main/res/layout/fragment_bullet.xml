<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bullet_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/bullet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bullet_title_hint"
            android:background="@null"
            android:nextFocusUp="@id/bullet_title"
            android:nextFocusLeft="@id/bullet_title"
            />

        <FrameLayout
            android:id="@+id/bullet_content_parent_layout"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/bullet_title"
            >

            <ViewStub
                android:id="@+id/bullet_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </FrameLayout>
    </RelativeLayout>
</ScrollView>
